<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray_F7F7F7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/bg_mine_yellow_gradient">

        <ImageView
            android:id="@+id/iv_edit_info"
            android:layout_width="17dp"
            android:layout_height="20dp"
            android:layout_margin="15dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_edit_info" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_message" />

        <ImageView
            android:id="@+id/iv_head_pic"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:src="@mipmap/icon_head_def" />

        <TextView
            android:id="@+id/tv_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_head_pic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="救援战斗机"
            android:textColor="@color/white"
            android:textSize="17sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="200dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_white_7r"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:drawableLeft="@mipmap/icon_my_publish"
                android:drawableRight="@mipmap/icon_arrow_right"
                android:text="我的发布"
                android:textColor="@color/color_gray_333333"
                android:textSize="15sp"/>
        </LinearLayout>
        <View style="@style/horizontalGrayLine"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:drawableLeft="@mipmap/icon_my_collection"
                android:drawableRight="@mipmap/icon_arrow_right"
                android:text="我的收藏"
                android:textColor="@color/color_gray_333333"
                android:textSize="15sp"/>
        </LinearLayout>
        <View style="@style/horizontalGrayLine"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:drawableLeft="@mipmap/icon_my_info"
                android:drawableRight="@mipmap/icon_arrow_right"
                android:text="我的资料"
                android:textColor="@color/color_gray_333333"
                android:textSize="15sp"/>
        </LinearLayout>
        <View style="@style/horizontalGrayLine"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:drawableLeft="@mipmap/icon_my_score"
                android:drawableRight="@mipmap/icon_arrow_right"
                android:text="我的积分"
                android:textColor="@color/color_gray_333333"
                android:textSize="15sp"/>
        </LinearLayout>
        <View style="@style/horizontalGrayLine"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:drawableLeft="@mipmap/iocn_my_honor"
                android:drawableRight="@mipmap/icon_arrow_right"
                android:text="个人荣誉"
                android:textColor="@color/color_gray_333333"
                android:textSize="15sp"/>
        </LinearLayout>
        <View style="@style/horizontalGrayLine"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:drawableLeft="@mipmap/icon_my_xinyu"
                android:drawableRight="@mipmap/icon_arrow_right"
                android:text="信誉值"
                android:textColor="@color/color_gray_333333"
                android:textSize="15sp"/>
        </LinearLayout>
        <View style="@style/horizontalGrayLine"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:drawableLeft="@mipmap/icon_my_setting"
                android:drawableRight="@mipmap/icon_arrow_right"
                android:text="设置"
                android:textColor="@color/color_gray_333333"
                android:textSize="15sp"/>
        </LinearLayout>
        <View style="@style/horizontalGrayLine"/>
    </LinearLayout>

</RelativeLayout>